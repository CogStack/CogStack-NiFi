[v3_ca]
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid:always,issuer
basicConstraints = critical, CA:true
keyUsage = critical, keyCertSign, cRLSign

[v3_leaf]
basicConstraints = CA:FALSE
keyUsage = digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth, clientAuth
authorityKeyIdentifier = keyid:always,issuer
subjectAltName = @alt_names

[alt_names]
DNS.1 = nifi
DNS.2 = nifi-registry-flow
DNS.3 = nifi-nginx
DNS.4 = elasticsearch-1
DNS.5 = elasticsearch-2
DNS.6 = elasticsearch-3
DNS.7 = ocr-service
DNS.8 = ocr-service-text-only
DNS.9 = medcat-trainer-nginx
DNS.10 = medcat-trainer-ui 
DNS.11 = nlp-medcat-service-production
DNS.12 = nlp-medcat-service-production-deid
DNS.13 = cogstack-kibana
DNS.14 = cogstack-cohort
