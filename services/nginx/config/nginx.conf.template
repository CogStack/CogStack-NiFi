            proxy_set_header X-ProxyPort 8443;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-ProxyScheme $scheme;
            proxy_hide_header X-Frame-Options;
            proxy_pass https://nifi/nifi-api/;
        }

